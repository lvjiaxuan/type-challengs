{
  "name": "@lvjiaxuan/type-challenges",
  "version": "0.0.1",
  "private": false,
  "author": "lvjiaxuan <471501748@qq.com> (https://github.com/lvjiaxuan)",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --fix --cache",
    "tsc": "tsc --noEmit",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@lvjiaxuan/eslint-plugin": "^0.4.2",
    "@octokit/rest": "^19.0.5",
    "@type-challenges/utils": "^0.1.1",
    "@types/node": "^18.11.17",
    "eslint": "^8.30.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix --cache"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:@lvjiaxuan/recommended"
    ],
    "rules": {
      "@typescript-eslint/keyword-spacing": [
        "warn",
        {
          "after": true,
          "before": true
        }
      ]
    }
  }
}
